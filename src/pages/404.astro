---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page not found" metaDescription="Page not found">
  <div class="max-w-[1564px] mx-auto md:px-8-px">
    <div class="text-lt-gray dark:text-dk-gray py-2 px-4-px max-w-xl mx-auto md:py-6 md:px-8-px lg:max-w-4xl">
      <h1 id="skip-target" class="text-3xl font-bold mt-4 mb-2 lg:text-4xl">Page not found</h1>
      <div class="text-xl bodytext">
        <p>
          Apologies, the page you were trying to use is not available. 
        </p>
      </div>
    </div>
  </div>
</Layout>